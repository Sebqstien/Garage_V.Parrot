{% extends "base.html.twig" %}
{% block content %}
<main class="container-fluid d-flex flex-wrap flex-column border-bottom border-warning">
    <h1 class="text-center text-warning my-5">Galerie d'images</h1>
    <a class="text-warning text-center fw-bold m-5 " href="/dashboard">Retour</a>

    <form action="/dashboard/annonces/images/update/{{ annonce.id }}" method="POST" enctype="multipart/form-data">
        <div class="row">
            {% for image in images %}
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="/{{ image.path_image }}" class="card-img-top" alt="Image">
                    <div class="card-body">
                        <a href="/dashboard/annonces/images/delete/{{image.id}}" class="btn btn-danger"
                            onclick="ConfirmDelete()">Supprimer</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="form-group m-4">
            <label for="new_images">Ajouter d'autres images :</label>
            <input type="file" class="form-control-file mt-5" name="new_images[]" multiple>
        </div>

        <button type="submit" class="btn btn-success my-5">uploader</button>
    </form>
</main>
{% endblock content %}
{% block javascript %}
<script src="/js/ConfirmDelete.js"></script>
{% endblock javascript %}