{% extends "base.html.twig" %}
{% block content %}
<div class="container">
    <h2>Galerie d'images</h2>

    <form action="/dashboard/annonces/images/update/{{ annonce.id }}" method="POST" enctype="multipart/form-data">
        <div class="row">
            {% for image in images %}
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="/{{ image.path_image }}" class="card-img-top" alt="Image">
                    <div class="card-body">
                        <a href="/dashboard/annonces/images/delete/{{image.id_image}}"
                            class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="form-group mt-4">
            <label for="new_images">Ajouter d'autres images :</label>
            <input type="file" class="form-control-file" name="new_images[]" multiple>
        </div>

        <button type="submit" class="btn btn-primary">uploader</button>
    </form>
</div>
{% endblock content %} 