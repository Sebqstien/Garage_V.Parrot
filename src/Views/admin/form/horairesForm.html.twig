{% extends "base.html.twig" %}
{% block content %}
<main class="container-fluid d-flex flex-column flex-wrap align-content-center py-5 border-bottom border-warning">
    <h1 class="text-center text-warning my-5">Modifier un Horaire</h1>
    <a class="text-warning text-center fw-bold m-5 " href="/dashboard/horaires">Retour</a>
    <form action="/dashboard/horaires/save/{{ horaires.id }}" method="POST">
        {% if horaires.id is defined %}
        <input type="hidden" name="id" value="{{ horaires.id }}">
        {% endif %}
        <div class="form-group">
            <label class="my-1" for="jours_ouverture">Jours d'ouvertures</label>
            <input type="text" class="form-control mb-3" id="jours_ouverture" name="jours_ouverture"
                value="{{ horaires.jours_ouverture ?? '' }}" required>
        </div>
        <div class="form-group">
            <label class="my-1" for="heures_PM">Heures Matin</label>
            <input type="text" class="form-control mb-3" id="heures_PM" name="heures_PM"
                value="{{ horaires.heures_PM ?? '' }}" required>
        </div>
        <div class="form-group">
            <label class="my-1" for="heures_AM">Heures Apres-Midi</label>
            <input type="text" class="form-control mb-5" id="heures_AM" name="heures_AM"
                value="{{ horaires.heures_AM ?? '' }}" required>
        </div>

        <button type="submit" class="btn btn-primary my-5">Modifier</button>

    </form>
</main>
{% endblock %}