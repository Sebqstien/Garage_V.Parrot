{% extends "base.html.twig" %}
{% block content %}
<main class="container-flui d-flex flex-column flex-wrap align-content-center py-5 border-bottom border-warning">
    <h1 class="text-center text-warning">Ajouter un avis client</h1>
    <a class="text-warning text-center fw-bold m-5 " href="/dashboard/avis">Retour</a>
    <form class="my-5" action="/dashboard/avis/save" method="POST">
        <div class="form-group">
            <label class="my-1" for="nom">Nom du client</label>
            <input type="text" class="form-control" id="nom" name="nom" required>
        </div>
        <div class="form-group">
            <label class="my-1" for="note">Note</label>
            <input type="text" class="form-control" id="note" name="note" required>
        </div>
        <div class="form-group">
            <label class="my-1" for="commentaire_avis">Commentaire</label>
            <textarea rows="10" cols="10" class="form-control" id="commentaire_avis" name="commentaire_avis"
                required></textarea>
        </div>
        <button type="submit" class="btn btn-success my-5">Ajouter</button>
    </form>
</main>
{% endblock %}