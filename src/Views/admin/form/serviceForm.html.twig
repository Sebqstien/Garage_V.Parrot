{% extends "base.html.twig" %}
{% block content %}
<main class="container-fluid d-flex flex-column flex-wrap align-content-center py-5 border-bottom border-warning">
    <h1 class="text-center text-warning my-5">{{ service.id is defined ? 'Modifier' : 'Ajouter' }} un service</h1>
    <a class="text-warning text-center fw-bold m-5 " href="/dashboard/services">Retour</a>

    <form action="/dashboard/services/save{{ service.id is defined ? '/' ~ service.id : '' }}" method="POST">
        {% if service.id is defined %}
        <input type="hidden" name="id" value="{{ service.id }}">
        {% endif %}
        <div class="form-group my-3">
            <label class="my-1" for="titre">Titre</label>
            <input type="text" class="form-control" id="titre" name="titre" value="{{ service.titre ?? '' }}" required>
        </div>
        <div class="form-group my-3">
            <label class="my-1" for="description">description</label>
            <input type="text" class="form-control" id="description" name="description"
                value="{{ service.description ?? '' }}" required>
        </div>
        <div class="form-group my-3">
            <label class="my-1" for="prix">Prix</label>
            <input type="text" class="form-control" id="prix" name="prix" value="{{ service.prix ?? '' }}" required>
        </div>
        <button type="submit" class="btn btn-primary my-5">{{ service.id is defined ? 'Modifier' : 'Ajouter' }}</button>
    </form>
</main>
{% endblock %}