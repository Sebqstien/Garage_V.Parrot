{% extends "base.html.twig" %}
{% block content %}
<h1>Details de l'annonce</h1>
<h2>{{annonce.titre}}</h2>
{% for image in images %}
<img style="width:100px; height:100px;" src={{image.path_image}} alt="">
{% endfor %}
<h6>Date de mise en ligne: {{annonce.created_at|date("d/m/Y")}}</h6>
<ul>
    <li>
        <p>Marque: {{annonce.marque}}</p>
    </li>
    <li>
        <p>Annee: {{annonce.annee}}</p>
    </li>
    <li>
        <p>Kilometres: {{annonce.kilometrage}}</p>
    </li>
</ul>
<p>TEL: 02.51.99.99.99
<h6>Description:</h6>
<p>{{annonce.description}}</p>
{% endblock content %}