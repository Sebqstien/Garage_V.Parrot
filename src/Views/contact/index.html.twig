{% extends "base.html.twig" %}

{% block content %}
<main class=" container-fluid m-0 p-0">
    <h1 class="text-center text-warning my-5">Contactez-nous</h1>

    <section class="row border-bottom border-warning py-5">
        <form method="POST" action="/mail" class="col-sm-8 col-xl-6 mx-auto">
            <div class="form-group my-5">
                <label for="nom">Nom :</label>
                <input type="text" id="nom" name="nom" class="form-control border border-warning">
            </div>

            <div class="form-group my-5">
                <label for="email">E-mail :</label>
                <input type="email" id="email" name="email" class="form-control border border-warning">
            </div>

            <div class="form-group my-5">
                <label for="sujet">Sujet :</label>
                <input type="text" id="sujet" name="sujet" class="form-control border border-warning">
            </div>

            <div class="form-group my-5">
                <label for="message">Message :</label>
                <textarea id="message" name="message" class="form-control border border-warning" rows="10"></textarea>
            </div>

            <button type="submit" class="btn ">Envoyer</button>
        </form>
    </section>
</main>

{% endblock %}