{% extends "base.html.twig" %}

{% block content %}



<h1>Formulaire d'avis client</h1>

<div class="container">

    {% for item in avis %}
    <p>{{item.nom}}</p>
    <p>{{item.note}} /5</p>
    <p>{{item.commentaire_avis}}</p>
    {% endfor %}

    <form method="POST" action="/avis">
        <div class="form-group">
            <label for="notation">Notation :</label>
            <div class="rating">

                <input type="radio" id="star5" name="notation" value="5">
                <label for="star5" title="5 étoiles">
                    <i class=" text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                    <i class=" text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                </label>

                <input type="radio" id="star4" name="notation" value="4">
                <label for="star4" title="4 étoiles">
                    <i class="text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                </label>

                <input type="radio" id="star3" name="notation" value="3">
                <label for="star3" title="3 étoiles">
                    <i class="text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                </label>

                <input type="radio" id="star2" name="notation" value="2">
                <label for="star2" title="2 étoiles">
                    <i class="text-warning bi bi-star-fill"></i>
                    <i class="text-warning bi bi-star-fill"></i>
                </label>

                <input type="radio" id="star1" name="notation" value="1">
                <label for="star1" title="1 étoile">
                    <i class="text-warning bi bi-star-fill"></i>
                </label>
            </div>
        </div>

        <div class="form-group">
            <label for="nom">Nom :</label>
            <input type="text" id="nom" name="nom" class="form-control">
        </div>

        <div class="form-group">
            <label for="commentaire">Commentaire :</label>
            <textarea id="commentaire" name="commentaire" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Donner son avis</button>
    </form>
</div>


{% endblock content %}